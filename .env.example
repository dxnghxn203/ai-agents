# OpenAI API Key for AI-powered text analysis
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs API Key (optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Replicate API Token (optional)
REPLICATE_API_TOKEN=your_replicate_api_token_here

# OpenRouter API Configuration (alternative)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=your_s3_bucket_name

# Redis Configuration (for Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Server Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5001"]

# File Storage
TEMPLATES_DIR=./app/templates/lottie_samples
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output

# Video Settings
MAX_VIDEO_DURATION=60
MAX_FILE_SIZE=16777216  # 16MB in bytes

# Logging Level
LOG_LEVEL=INFO